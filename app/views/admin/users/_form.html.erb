<%= form_for [:admin, @user] do |f| %>
  <%= render "layouts/error_messages", object: f.object %>
  <div class="row form-group">
    <div class="col-md-12">
      <%= f.label t(".name") %>
      <%= f.text_field :name, class: "form-control", placeholder: "Your name" %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-12">
      <%= f.label t(".email") %>
      <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-12">
      <%= f.label t(".password") %>
      <%= f.password_field :password, class: "form-control", placeholder: "Your password" %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-12">
      <%= f.label t(".password_confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Your password" %>
    </div>
  </div>
  <div class="form-group text-center">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
