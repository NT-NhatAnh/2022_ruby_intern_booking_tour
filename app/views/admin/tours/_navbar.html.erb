 <%= form_for :tours_all do |f| %>
  <%= render "layouts/error_messages", object: f.object %>
  <div class="row form-group">
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Your tour's name" %>
    </div>
    <div class="col-md-4">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
